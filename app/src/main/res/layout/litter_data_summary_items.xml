<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/litter_report_summary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="总览"
            android:textSize="@dimen/text_middle"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/litter_report_summary_title"
            android:layout_alignParentRight="true"
            android:text="(单位:kg)"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/total_weight_ur_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="不可回收"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_weight_ur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/total_weight_background_union"
                android:gravity="center"
                android:text="0.00" />

            <TextView
                android:id="@+id/total_price_ur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/total_weight_r_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="可回收"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_weight_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/total_weight_background_recyclable"
                android:gravity="center"
                android:text="0.00" />

            <TextView
                android:id="@+id/total_price_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/total_weight_k_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="厨余"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_weight_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/total_weight_background"
                android:gravity="center"
                android:text="0.00" />

            <TextView
                android:id="@+id/total_price_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.00" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/total_price_mng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textSize="@dimen/text_middle"
        android:gravity="center"/>
</LinearLayout>